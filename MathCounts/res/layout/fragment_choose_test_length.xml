<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="32dp"
        />
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	
	     <TextView android:id="@+id/chooseNumQuestions"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:text="@string/numQuestions"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="32dp"
	        />
	    
	     <LinearLayout 
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
		     android:layout_below="@id/chooseNumQuestions"
		     android:layout_marginTop="8dp"
	         android:orientation="horizontal"
	         >
		    
		    <ImageView android:id="@+id/decrementQuestions"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:layout_marginLeft="48dp"
		        android:layout_weight="1"
		        android:src="@drawable/arrow_left"
		        />
		     
		    <TextView android:id="@+id/numQuestions"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:layout_weight="2"
		        android:textSize="36sp"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:text="4"
		        />
	    
		    <ImageView android:id="@+id/incrementQuestions"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_marginRight="48dp"
		        android:src="@drawable/arrow_right"
		        />
	         
	     </LinearLayout>
		    
	</RelativeLayout>
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	
	     <TextView android:id="@+id/chooseTime"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:text="@string/amountOfTime"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="32dp"
	        /> 
	    
	    <LinearLayout 
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_below="@id/chooseTime"
		     android:layout_marginTop="8dp"
	         android:orientation="horizontal"
	         >
		    
		    <ImageView android:id="@+id/decrementTime"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:layout_marginLeft="48dp"
		        android:layout_weight="1"
		        android:src="@drawable/arrow_left"
		        />
		     
		    <TextView android:id="@+id/amountTime"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:layout_weight="2"
		        android:textSize="36sp"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:text="4"
		        />
	    
		    <ImageView android:id="@+id/incrementTime"
		        android:layout_height="wrap_content"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_marginRight="48dp"
		        android:src="@drawable/arrow_right"
		        />
	         
	     </LinearLayout>
		    
	</RelativeLayout>
	
	<View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
	
    <Button android:id="@+id/next"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/start_test"
        android:textColor="#ffffff"
        style="@style/TimeTestButton" />
    
</LinearLayout>
