<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
    <ImageView
        android:id="@+id/gameCardImage"
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	android:layout_marginTop="32dp"
       	android:src="@drawable/game_card"
        />
    <TextView android:id="@+id/challengeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/gameCardImage"
        android:layout_margin="16dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textStyle="bold"
        />
    
    <LinearLayout android:id="@+id/titleLine"
        android:layout_below="@id/challengeTitle"
        android:layout_height="2dp"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:background="#000000"
        />
    
    <TextView android:id="@+id/challengeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLine"
        android:layout_alignLeft="@id/gameCardImage" 
        android:layout_alignRight="@id/gameCardImage" 
        android:layout_margin="48dp"
        android:textSize="30sp"/>
    
    <RelativeLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginBottom="64dp"
    	    android:layout_alignLeft="@id/gameCardImage"
    	    android:layout_alignRight="@id/gameCardImage"
    	    android:layout_alignBottom="@id/gameCardImage">
    
	    <TextView android:id="@+id/highScoresTV"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_centerVertical="true"
				android:layout_alignParentTop="true"
	    	    android:layout_marginLeft="32dp"
	    	    android:layout_marginRight="32dp"
	    	    android:layout_marginBottom="4dp"
	    	    android:text="@string/high_scores"
	    	    android:textSize="40sp"/>
	    	
	    	<View android:id="@+id/highScoresLine"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="1dp"
	    	    android:background="#c4c4c4"
	    	    android:layout_marginLeft="24dp"
	    	    android:layout_marginRight="24dp"
	    	    android:layout_marginBottom="32dp"
	    	    android:layout_below="@id/highScoresTV" />
	    	
	    	<TextView android:id="@+id/highScoreOne"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="64dp"
	    	    android:layout_marginRight="64dp"
	    	    android:layout_marginBottom="32dp"
	    	    android:layout_below="@id/highScoresLine"
	    	    android:text="1. Joey      1200"
	    	    android:textSize="40sp" />	
	    	
	    	<TextView android:id="@+id/highScoreTwo"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="64dp"
	    	    android:layout_marginRight="64dp"
	    	    android:layout_marginBottom="32dp"
	    	    android:layout_below="@id/highScoreOne"
	    	    android:text="2."
	    	    android:textSize="40sp" />
	    	
	    	<TextView android:id="@+id/highScoreThree"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="64dp"
	    	    android:layout_marginRight="64dp"
	    	    android:layout_below="@id/highScoreTwo"
	    	    android:text="3."
	    	    android:textSize="40sp" />
    	</RelativeLayout>

</RelativeLayout>
