<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#e4e4e4">
    
    	<TextView android:id="@+id/results_page_message"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_margin="80dp"
    	    android:layout_alignParentTop="true"
    	    android:layout_centerHorizontal="true"
    	    android:text="@string/your_score"
    	    android:textSize="50sp" />
    	
    	<TextView android:id="@+id/challenge_score"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_below="@id/results_page_message"
    	    android:layout_centerHorizontal="true"
    	    android:text="2800" 
    	    android:layout_marginBottom="96dp"
    	    android:textSize="60sp"
    	    android:textStyle="bold" />
    
    	<TextView android:id="@+id/highScoresTV"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerVertical="true"
    	    android:layout_below="@id/challenge_score"
    	    android:layout_marginLeft="64dp"
    	    android:layout_marginRight="64dp"
    	    android:text="@string/high_scores"
    	    android:textSize="40sp"/>
    	
    	<View android:id="@+id/highScoresLine"
    	    android:layout_width="match_parent"
    	    android:layout_height="1dp"
    	    android:background="#c4c4c4"
    	    android:layout_marginLeft="24dp"
    	    android:layout_marginRight="24dp"
    	    android:layout_marginBottom="16dp"
    	    android:layout_below="@id/highScoresTV" />
    	
    	<TextView android:id="@+id/highScoreOne"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="64dp"
    	    android:layout_marginRight="64dp"
    	    android:layout_marginBottom="64dp"
    	    android:layout_marginTop="32dp"
    	    android:layout_below="@id/highScoresLine"
    	    android:text="1. Joey      1200"
    	    android:textSize="40sp" />	
    	
    	<TextView android:id="@+id/highScoreTwo"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="64dp"
    	    android:layout_marginRight="64dp"
    	    android:layout_marginBottom="64dp"
    	    android:layout_below="@id/highScoreOne"
    	    android:text="2."
    	    android:textSize="40sp" />
    	
    	<TextView android:id="@+id/highScoreThree"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="64dp"
    	    android:layout_marginRight="64dp"
    	    android:layout_below="@id/highScoreTwo"
    	    android:text="3."
    	    android:textSize="40sp" />		
    	      	    
	   
	    <Button android:id="@+id/tryAgainButton"
	        android:layout_height="80dp"
	        android:layout_alignParentBottom="true"
	        android:text="@string/try_again"
	        android:textSize="25sp"
	        android:background="@drawable/button_shape_shadowed_blue"
	        style="@style/TimeTestButton" />

</RelativeLayout>

