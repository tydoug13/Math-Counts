<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4d4d4"
    android:id="@+id/home_relativeLayout">
    
        
    <FrameLayout android:id="@+id/challenge_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:layout_alignParentBottom="true"
        android:background="#d4d4d4"
        android:layout_marginTop="32dp">
		   
        <ImageView android:id="@+id/challengeShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/challenge_shadow"/>
		   
        <ImageView android:id="@+id/challengeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/challenge_mode_image" />
        
    </FrameLayout>
    
    <LinearLayout android:id="@+id/home_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/challenge_background">

        	
		   <ImageView android:id="@+id/home_multiplication_button"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:src="@drawable/ggshimmermultiplicaiton200"
		       />
		   
		   <ImageView android:id="@+id/home_division_button"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:src="@drawable/ggdivshimmer200"
		       />
    
	</LinearLayout>
	
    	<LinearLayout android:layout_above="@id/home_buttons"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:orientation="horizontal"
	       android:layout_centerHorizontal="true">
        	
		   <ImageView
		       android:id="@+id/home_addition_button"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:maxWidth="200dp"
		       android:src="@drawable/ggshimmer200" />
		   
		   <ImageView android:id="@+id/home_subtraction_button"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:src="@drawable/ggsubshimmer200"
		       />
		   
		</LinearLayout> 		

        
</RelativeLayout>
