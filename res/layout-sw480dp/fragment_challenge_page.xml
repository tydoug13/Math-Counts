<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5FFFF">
    
    <TextView android:id="@+id/challengeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Swipe left or right to change games."
        android:textSize="20sp"/>
    
    <android.support.v4.view.ViewPager
	    android:id="@+id/viewPagerGames"
	    android:layout_marginTop="16dp"
	    android:layout_below="@id/challengeText"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/highscoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPagerGames"
        android:layout_margin="16dp"
        android:text="High Score:"
        android:textSize="20sp" />
    
    <Button android:id="@+id/challengeStartButton"
        style="@style/TimeTestButton"
        android:text="Start!"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:background="@drawable/button_shape_shadowed_blue" />

</RelativeLayout>
